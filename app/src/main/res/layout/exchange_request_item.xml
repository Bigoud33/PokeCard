<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/userId1"
                android:gravity="left"
                android:layout_weight="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/pokemonToExchange1"
                android:gravity="left"
                android:layout_weight="1"/>
        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp" app:srcCompat="@mipmap/ic_launcher_foreground"
                android:gravity="left"
                android:id="@+id/pokemonSprite1" android:layout_weight="1"/>
        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp" app:srcCompat="@mipmap/ic_launcher_foreground"
                android:id="@+id/pokemonSprite2"
                android:gravity="right"
                android:layout_weight="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/pokemonToExchange2"
                android:gravity="right"
                android:layout_weight="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/userId2"
                android:gravity="right"
                android:layout_weight="1"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>