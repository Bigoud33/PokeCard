<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/main">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="120dp"
            android:id="@+id/profileLayout"
    android:elevation="10dp">
        <TextView
                android:text="Pseudo "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Pseudo"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:layout_marginTop="110dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="userPseudo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userPseudo" app:layout_constraintStart_toEndOf="@+id/Pseudo"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/Pseudo" app:layout_constraintBottom_toBottomOf="@+id/Pseudo"/>
        <TextView
                android:text="Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Email" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/Pseudo"/>
        <TextView
                android:text="userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userEmail" app:layout_constraintStart_toEndOf="@+id/Email"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/Email" app:layout_constraintBottom_toBottomOf="@+id/Email"/>
        <TextView
                android:text="ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Id" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/Email"/>
        <TextView
                android:text="userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userId" app:layout_constraintStart_toEndOf="@+id/Id"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/Id" app:layout_constraintBottom_toBottomOf="@+id/Id"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
            android:layout_width="@dimen/com_facebook_profilepictureview_preset_size_large"
            android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_large"
            tools:srcCompat="@drawable/com_facebook_profile_picture_blank_portrait"
            android:id="@+id/profilePicture"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:visibility="visible"
            app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
            app:layout_constraintHorizontal_bias="0.497"
            android:elevation="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>